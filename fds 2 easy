CODE
n = int(input("Enter the total number of students: "))
print("Enter -1 for the absent students")
M =[]

for i in range(1,n+1):
    mark = int(input("Enter marks in FDS: "))
    M.append(mark)
print("List of marks of students: ",M)

def absent(M):
    abs_std = 0
    for i in M:
        if i==-1:
            abs_std +=1
    return("No. of students who were absent for the exam: ",abs_std)
    
def minmark(M):
    NewM = []
    x = 0
    for i in M:
        if i != -1:
            NewM.append(i)
    for i in NewM:
        x = x+1
    print("No. of students who were present for the exam: ",x)
    minmark = NewM[0]
    for i in NewM:
        if minmark>i:
            minmark = i
    return("Minimum marks of FDS: ",minmark)
    
def maxmark(M):
    NewM = []
    x = 0
    for i in M:
        if i != -1:
            NewM.append(i)
    for i in NewM:
        x = x+1
        print("No. of students who were present for the exam: ",x)
        maxmark = NewM[0]
    for i in NewM:
        if maxmark<i:
            maxmark = i
    return("Maximum marks of FDS: ",maxmark)
    
def avgmark(M):
    NewM = []
    x=0
    for i in M:
        if i != -1:
            NewM.append(i)
    for i in NewM:
        x = x+1
    print("No. of students who were present for the exam: ",x)
    s=0
    c=0
    for i in NewM:
        s+=i
        c+=1
    return("Average marks: ", s/c)

def freqmark(M):
    f=0
    score=0
    NewM = []
    x=0
    for i in M:
        if i != -1:
            NewM.append(i)
    for i in NewM:
        x = x+1
    print("No. of students who were present for the exam: ",x)
    for i in NewM:
        c = 0
    for j in NewM:
        if i == j:
            c+=1
            if c>f:
                f=c
                score = j
    return("Maximum frequency: ",f,"Score: ",score)
    
while True:
    print("MENU:")
    print("1. No. of absent students ")
    print("2. Minimum marks ")
    print("3. Highest marks ")
    print("4. Average marks ")
    print("5. Frequency ")
    x = int(input("Enter your choice between (1-5): "))
    if x == 1:
        print(absent(M))
    elif x == 2:
        print(minmark(M))
    elif x == 3:
        print(maxmark(M))
    elif x == 4:
        print(avgmark(M))
    elif x == 5:
        print(freqmark(M))
        break
    else:
        print("Invalid choice. sorry")

